    <script>
        // 设置默认日期为今天
        document.getElementById('borrowDate').valueAsDate = new Date();
        
        // 表单提交处理
        document.getElementById('borrowForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('บันทึกข้อมูลการยืมหนังสือเรียบร้อยแล้ว!');
            // ในทางปฏิบัติควรมีโค้ดสำหรับส่งข้อมูลไปยังเซิร์ฟเวอร์ที่นี่
            this.reset();
            document.getElementById('borrowDate').valueAsDate = new Date();
        });
    </script>
